{% extends 'base.html.twig' %}

{% block title %}Nom du site - Mot de passe oublié{% endblock %}

{% block content %}
    <div class="block-small">
        {% for message in app.flashes('notice')  %}
            <div class="alert alert-info">
                {{ message }}
            </div>
        {% endfor %}
        <form method="post">

            <h3 class="h3 mb-3 font-weight-normal">Réinitialiser mon mot de passe</h3>
            <label for="inputEmail">Votre email :</label>
            <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>


            <button class="btn btn-lg btn-info mt-3 btn-block" type="submit">
                Valider
            </button>
            <hr>
            <p class="text-center">Ou souhaitez-vous <a href="{{ path('app_login') }}">Vous connectez</a> ?</p>
        </form>
    </div>
{% endblock %}
